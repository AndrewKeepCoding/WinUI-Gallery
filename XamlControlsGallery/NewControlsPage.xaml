<local:ItemsPageBase
    x:Class="AppUIBasics.NewControlsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppUIBasics"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:behavior="using:AppUIBasics.Behaviors"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    NavigationCacheMode="Enabled"
    HighContrastAdjustment="None">

    <Page.Resources>
        <CollectionViewSource x:Name="itemsCVS" IsSourceGrouped="true"/>
    </Page.Resources>

    <!--  This grid acts as a root panel for the page.  -->
    <Grid Background="{ThemeResource HomePageBackgroundBrush}">
        <VisualStateManager.VisualStateGroups>
            <!--  Visual states reflect the application's window size  -->
            <VisualStateGroup x:Name="LayoutVisualStates">
                <VisualState x:Name="WideLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource Breakpoint640Plus}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters />
                </VisualState>
                <VisualState x:Name="NarrowLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="itemGridView.Padding" Value="0,0,0,36" />
                        <Setter Target="itemGridView.Margin" Value="0,-64,0,0" />
                        <Setter Target="headerImageView.Margin" Value="-12,0,-12,12" />
                        <Setter Target="HeaderTileOuterGrid.Margin" Value="94,0,94,0" />
                        <Setter Target="HeaderTileGrid.MaximumRowsOrColumns" Value="2" />
                        <Setter Target="learnMore.Margin" Value="64,24,0,0" />
                        <Setter Target="itemGridView.ItemContainerStyle" Value="{StaticResource IndentedGridViewItemStyleSmall}" />
                        <Setter Target="pageHeader.Visibility" Value="Collapsed" />
                        <Setter Target="smallHeaderText.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <StackPanel>
            
        </StackPanel>
        <GridView x:Name="itemGridView"
            Padding="40,0,12,36"
            AutomationProperties.AutomationId="ItemGridView"
            AutomationProperties.Name="Items In Group"
            ContainerContentChanging="OnItemGridViewContainerContentChanging"
            IsItemClickEnabled="True"
            IsSwipeEnabled="False"
            ItemClick="OnItemGridViewItemClick"
            ItemContainerStyle="{StaticResource IndentedGridViewItemStyle}"
            ItemTemplate="{StaticResource ControlItemTemplate}"
            ItemsSource="{x:Bind itemsCVS.View, Mode=OneWay}"
            KeyDown="OnItemGridViewKeyDown"
            Loaded="OnItemGridViewLoaded"
            SizeChanged="OnItemGridViewSizeChanged"
            SelectionMode="None">
            <interactivity:Interaction.Behaviors>
                <behavior:ImageScrollBehavior TargetControl="{Binding ElementName=pageHeader}" />
            </interactivity:Interaction.Behaviors>

            <GridView.Header>
                <Grid Margin="-40,0,-40,0">
                    <ParallaxView
                        x:Name="headerImageView"
                        Height="250"
                        Margin="0,0,0,0"
                        Source="{x:Bind itemGridView}"
                        VerticalShift="350">
                        <Image
                            x:Name="headerImage"
                            HorizontalAlignment="Center"
                            Source="Assets/MainPage_Banner.png"
                            Stretch="Uniform" />
                    </ParallaxView>
                    <Rectangle Height="60" VerticalAlignment="Bottom" Fill="{StaticResource HeroImageGradientBrush}"/>
                    
                    <StackPanel x:Name="HeaderTileOuterGrid" Margin="54,110,0,0">
                        <TextBlock x:Name="smallHeaderText"
                               Foreground="{ThemeResource PageHeaderForegroundBrush}"
                               Visibility="Collapsed"
                               Style="{StaticResource TitleTextBlockStyle}"                               
                               Text="{StaticResource NewControlsName}"
                               Margin="0,60,0,20" />
                        <VariableSizedWrapGrid x:Name="HeaderTileGrid"  Orientation="Horizontal">
                            <local:HeaderTiles Title="Getting Started" Source="/Assets/gettingStarted.png" Margin="0,0,12,12"/>
                            <local:HeaderTiles Title="Windows Design" Source="/Assets/style-1x.png" Margin="0,0,12,12"/>
                            <local:HeaderTiles Title="GitHub Repo" Source="/Assets/githubTile.png" Margin="0,0,12,12"/>
                        </VariableSizedWrapGrid>
                    </StackPanel>
                </Grid>
                
            </GridView.Header>

            <GridView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate x:DataType="local:GroupInfoList">
                            <TextBlock x:Name="pageSubtitle" Text="{x:Bind Title}" Foreground="{ThemeResource ApplicationForegroundThemeBrush}" Style="{StaticResource SubtitleTextBlockStyle}"  Margin="4,24,0,0"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </GridView.GroupStyle>

            <GridView.Footer>
                <Grid x:Name="learnMore" VerticalAlignment="Bottom" Height="200" Margin="16,34,48,0">
                    <StackPanel>
                        <TextBlock x:Name="LearnMore" Text="Learn More" Foreground="{ThemeResource ApplicationForegroundThemeBrush}" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,12" />
                        <HyperlinkButton Content="Developer Center"/>
                        <HyperlinkButton Content="Getting Started"/>
                        <HyperlinkButton Content="App Code Samples"/>
                        <HyperlinkButton Content="Windows Template Studio"/>
                    </StackPanel>
                </Grid>
            </GridView.Footer>
        </GridView>

        <local:PageHeader x:Name="pageHeader"
            Title="{StaticResource NewControlsName}"
            VerticalAlignment="Top"
            Foreground="{ThemeResource PageHeaderForegroundBrush}"
            Background="{ThemeResource HomePageBackgroundBrush}"
            FontSize="28"
            Padding="{ThemeResource NavigationViewHeaderMargin}"
            IsHitTestVisible="False"
            ShadowOpacity="0"/>
    </Grid>
  
</local:ItemsPageBase>
